---
interface Props {
  /** Target element ID (defaults to 'main-content') */
  target?: string;
  /** Link text */
  text?: string;
}

const { target = 'main-content', text = 'Skip to main content' } = Astro.props;
---

<a href={`#${target}`} class="skip-link">
  {text}
</a>

<style>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 0;
    z-index: 1000;
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-accent);
    color: var(--color-background);
    text-decoration: none;
    font-weight: 600;
    border-radius: 0 0 4px 0;
    transition: top 0.2s ease-in-out;
  }

  .skip-link:focus {
    top: 0;
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
