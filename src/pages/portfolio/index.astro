---
/**
 * Writing / Work Page
 *
 * Essays and guides on building AI/ML systems and teams
 * Minimal design - just links and descriptions
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Writing - Bradley Fay';
const description = 'Essays and guides on building AI/ML systems, experimentation platforms, and data science teams.';

// Fetch and sort portfolio items
const portfolioItems = (await getCollection('portfolio')).sort(
  (a, b) => a.data.order - b.data.order
);
---

<BaseLayout title={title} description={description}>
  <main class="work-page">
    <div class="container">
      <header class="page-header">
        <h1>Writing</h1>
        <p class="lead">
          Essays and guides on building AI/ML systems, experimentation platforms,
          and data science teams.
        </p>
      </header>

      {portfolioItems.length === 0 ? (
        <p class="empty">Essays coming soon.</p>
      ) : (
        <ul class="work-list">
          {portfolioItems.map(item => (
            <li class="work-item">
              <a href={`/portfolio/${item.id}`} class="work-link">
                <span class="work-title">{item.data.title}</span>
              </a>
              <p class="work-description">{item.data.description}</p>
            </li>
          ))}
        </ul>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .work-page {
    padding: var(--space-3xl) 0;
  }

  .page-header {
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-sm);
  }

  .lead {
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    max-width: var(--content-width);
    margin: 0;
  }

  .empty {
    color: var(--color-text-muted);
  }

  .work-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .work-item {
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .work-item:first-child {
    padding-top: 0;
  }

  .work-item:last-child {
    border-bottom: none;
  }

  .work-link {
    display: block;
    text-decoration: none;
    margin-bottom: var(--space-sm);
  }

  .work-link:hover .work-title {
    text-decoration: underline;
  }

  .work-title {
    display: block;
    font-weight: 600;
    font-size: var(--text-lg);
    color: var(--color-accent);
    margin-bottom: var(--space-xs);
  }

  .work-meta {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .work-description {
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
    max-width: var(--content-width);
  }
</style>
