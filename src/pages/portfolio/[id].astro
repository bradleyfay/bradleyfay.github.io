---
/**
 * Essay Page Template
 *
 * Clean, blog-style layout inspired by lethain.com and pragmaticengineer.com
 *
 * Design principles:
 * - Prose-first: let the writing speak for itself
 * - Understated: no promotional elements or flashy visuals
 * - Authentic: substance over style
 */

import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('portfolio');
  return entries.map(entry => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const { data } = entry;
---

<BaseLayout title={`${data.title} - Bradley Fay`} description={data.description}>
  <article class="essay">
    <div class="container">
      <!-- Header -->
      <header class="essay-header">
        <a href="/portfolio" class="back-link">← Writing</a>
        <h1>{data.title}</h1>
      </header>

      <!-- Main Content -->
      <div class="content prose">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="essay-footer">
        <a href="/portfolio" class="back-link">← Writing</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .essay {
    padding-top: var(--space-lg);
    padding-bottom: var(--space-2xl);
  }

  .essay-header {
    margin-bottom: var(--space-xl);
  }

  .back-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: var(--text-sm);
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .essay-header h1 {
    margin-top: var(--space-lg);
    margin-bottom: 0;
    font-size: var(--text-3xl);
    line-height: 1.2;
  }

  /* Prose Content - the star of the show */
  .prose {
    max-width: 42rem;
  }

  .prose :global(h2) {
    font-size: var(--text-xl);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    font-weight: 600;
  }

  .prose :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
    font-weight: 600;
  }

  .prose :global(p) {
    font-size: var(--text-base);
    line-height: 1.75;
    margin-bottom: var(--space-md);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .prose :global(li) {
    font-size: var(--text-base);
    line-height: 1.75;
    margin-bottom: var(--space-xs);
  }

  .prose :global(strong) {
    font-weight: 600;
  }

  .prose :global(em) {
    font-style: italic;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-border);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-xl) 0;
  }

  .prose :global(code) {
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
    font-size: 0.875em;
    background: var(--color-surface);
    padding: 0.125em 0.375em;
    border-radius: 3px;
  }

  .prose :global(pre) {
    background: var(--color-surface);
    padding: var(--space-md);
    border-radius: 4px;
    overflow-x: auto;
    font-size: var(--text-sm);
    line-height: 1.5;
    margin: var(--space-lg) 0;
    border: 1px solid var(--color-border);
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    font-size: inherit;
  }

  /* Footer */
  .essay-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  /* Responsive */
  @media (min-width: 640px) {
    .essay-header h1 {
      font-size: var(--text-4xl);
    }
  }
</style>
